{
  "name": "sentinel-echo",
  "version": "7.0.0",
  "description": "Sentinel: Echo â€” Telegram MMO Game with Soul & Twin System",
  "main": "main.ts",
  "scripts": {
    "start": "deno run --allow-net --allow-env --allow-read --allow-write --unstable main.ts",
    "dev": "deno run --watch --allow-net --allow-env --allow-read --allow-write --unstable main.ts",
    "prod": "deno run --no-check --allow-net --allow-env --allow-read --allow-write --unstable main.ts",
    "test": "deno test --allow-net --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "clean": "rm -rf .cache deno.lock",
    "update": "deno cache --reload main.ts"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "fmt": {
    "files": {
      "include": ["*.ts", "**/*.ts"],
      "exclude": ["dist", "coverage", ".cache"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["*.ts", "**/*.ts"],
      "exclude": ["dist", "coverage", ".cache"]
    },
    "rules": {
      "exclude": ["no-explicit-any", "ban-types"]
    }
  },
  "tasks": {
    "start": "deno run -A main.ts",
    "dev": "deno run -A --watch main.ts",
    "dev:inspect": "deno run -A --watch --inspect main.ts",
    "cache": "deno cache main.ts",
    "compile:linux": "deno compile -A --target x86_64-unknown-linux-gnu --output dist/sentinel-echo-linux main.ts",
    "compile:windows": "deno compile -A --target x86_64-pc-windows-msvc --output dist/sentinel-echo-windows.exe main.ts",
    "compile:mac": "deno compile -A --target x86_64-apple-darwin --output dist/sentinel-echo-mac main.ts"
  },
  "imports": {
    "telegraf": "https://esm.sh/telegraf@4.15.0",
    "mongodb": "https://esm.sh/mongodb@5.8.0",
    "dotenv": "https://deno.land/std@0.208.0/dotenv/load.ts",
    "std/": "https://deno.land/std@0.208.0/"
  },
  "pup": {
    "id": "sentinel-echo",
    "cmd": "deno run -A main.ts",
    "autostart": true,
    "watch": ["."],
    "ignore": [".git", "dist", "coverage", ".cache", "logs"],
    "log": "logs/app.log",
    "maxRestarts": 10
  }
}
